<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_app"
    android:fillViewport="true"
    android:importantForAccessibility="yes">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <TextView
            android:id="@+id/tvTitleLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:accessibilityHeading="true"
            android:text="INICIAR SESIÓN"
            android:textColor="@color/texto_negro"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvLoginCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAccessibility="noHideDescendants"
            app:cardBackgroundColor="@color/background_dark"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="353dp"
                android:background="@drawable/fondo_cardview"
                android:importantForAccessibility="yes"
                android:orientation="vertical"
                android:padding="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/background_beige"
                    android:contentDescription="Campo para ingresar correo electrónico"
                    android:hint="Correo electrónico"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/texto_negro"
                    android:textColorHint="@color/texto_negro" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/background_beige"
                    android:contentDescription="Campo para ingresar contraseña"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/texto_negro"
                    android:textColorHint="@color/texto_negro" />

                <CheckBox
                    android:id="@+id/cbRecordarme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:contentDescription="Opción Recordarme sesión en este dispositivo"
                    android:text="Recordarme"
                    android:textColor="@color/title_dark" />

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="180dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="@color/background_beige"
                    android:contentDescription="Pulsar para iniciar sesión"
                    android:text="Iniciar sesión"
                    android:textColor="@color/texto_negro"
                    app:cornerRadius="24dp" />

                <TextView
                    android:id="@+id/tvOlvido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:contentDescription="Enlace: Olvidé mi contraseña"
                    android:focusable="true"
                    android:minHeight="48dp"
                    android:text="¿Olvido su contraseña?"
                    android:textColor="@color/title_dark"
                    android:textSize="15sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>