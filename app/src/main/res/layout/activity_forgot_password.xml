<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/fondo_app">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <TextView
            android:id="@+id/tvTitleForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:contentDescription="Título: Recuperación de contraseña"
            android:text="RECUPERAR CONTRASEÑA"
            android:textColor="@color/texto_negro"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvForgotCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:cardBackgroundColor="@color/background_dark"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitleForgot">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="509dp"
                android:background="@drawable/fondo_cardview"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="24dp"
                    android:background="@color/background_beige"
                    android:hint="ejemplo@correo.com"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="20dp" />

                <TextView
                    android:id="@+id/tvPreguntaSeguridad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/background_beige"
                    android:fontStyle="italic"
                    android:padding="12dp"
                    android:text="Introduce tu correo para ver la pregunta"
                    android:textColor="@color/texto_negro"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRespuestaSeguridad"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/background_beige"
                    android:hint="Escribe la respuesta aquí"
                    android:paddingHorizontal="20dp" />

                <Button
                    android:id="@+id/btnVerificar"
                    android:layout_width="200dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="@color/background_beige"
                    android:text="VERIFICAR"
                    android:textColor="@color/texto_negro"
                    android:textStyle="bold"
                    app:cornerRadius="24dp"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>