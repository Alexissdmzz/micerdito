        android:textColor="@color/texto_negro"
        android:labelFor="@+id/etNuevoNombre" />

    <EditText
        android:id="@+id/etNuevoNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe aquÃ­..."
        android:textColor="@color/texto_negro"
        android:textColorHint="@color/texto_negro"
        android:inputType="textPersonName"
        android:layout_marginTop="10dp"
        android:contentDescription="Campo para ingresar el nuevo nombre de usuario"
        android:importantForAccessibility="yes" />
</LinearLayout>