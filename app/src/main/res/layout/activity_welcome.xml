<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_app"
    android:fillViewport="true"
    android:importantForAccessibility="yes">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:id="@+id/ivLogoLogin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="76dp"
            android:contentDescription="Logotipo del usuario"
            android:focusable="false"
            android:src="@drawable/icono_anonimo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/fondo_cardview"
            android:gravity="center"
            android:importantForAccessibility="yes"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.499">

            <Button
                android:id="@+id/btnLoginWelcome"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/background_beige"
                android:contentDescription="Ir a la pantalla de inicio de sesiÃ³n"
                android:text="LOGIN"
                android:textColor="@color/texto_negro"
                app:cornerRadius="24dp" />

            <Button
                android:id="@+id/btnRegisterWelcome"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/background_beige"
                android:contentDescription="Ir a la pantalla de registro de usuario"
                android:text="REGISTER"
                android:textColor="@color/texto_negro"
                app:cornerRadius="24dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>