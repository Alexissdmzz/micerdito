<!--            android:name=".ui.autenticacion.ForgotPasswordActivity"-->
<!--            android:exported="false" />-->

        <!-- HOME -->
        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="false" />


    </application>

</manifest>